</span><span class='line'>       <span class="n">temp_addr</span> <span class="o">=</span> <span class="n">temp_addr</span><span class="o">-&gt;</span><span class="n">ifa_next</span><span class="p">;</span>
</span><span class='line'>        <span class="p">}</span>
